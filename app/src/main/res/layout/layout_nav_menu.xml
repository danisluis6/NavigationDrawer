<?xml version="1.0" encoding="utf-8"?>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/account_avatar_bg"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imvAccountAva"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_account" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAccName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="Username"
                android:textColor="#F1F1"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFaxNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 (916) 459-3104"
                android:textColor="#F1F1"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#fff" />

    <com.enclaveit.ezfaxing.custom.EzFaxingMenuItem
        android:id="@+id/layoutInbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isSetUnhandle="true"
        app:itemImage="@drawable/ic_nav_menu_inbox"
        app:itemText="@string/nav_item_inbox" />

    <TextView
        android:id="@+id/tvAppVersion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:gravity="bottom|center"
        android:text="lorence"
        android:textColor="#F1F1"
        android:visibility="gone" />
</LinearLayout>
